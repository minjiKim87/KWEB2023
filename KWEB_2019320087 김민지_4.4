const percent = [100, 60, 36, 22, 13, 8, 5, 3, 2, 1]

let attempts = 0;
let level = 0;

function getRandomBinaryResult(probability){
return Math.floor(Math.random() * 100) < (probability);
}
 function updateUI(){
document.getElementById('gauge-bar').style.width = level * 10 + '%';
document.getElementById('current-level').innerText = level;

 }
let intervalId = null;

function tryLevelUp(){
const intervalId = setInterval(()=>{
        if(level < 10) {
        attempts++;
        if(getRandomBinaryResult(percent[level])) {
            level++;
            updateUI();

        }
        }else{
        clearInterval(intervalId)}
        document.getElementById('attempts').innerText = attempts;
    }, 50);

 }


